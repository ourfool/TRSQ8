LDL 0 # counter reset
ST 15 # counter
LDL 7 # counter mask
ST 16 # counter mask
LDL 1 # mask
ST 10 # save mask
LDL 122 # txdata (0x7A)
ST 146 # IICTX (0x92)
LDL 8 # 0x0F (start)
ST 144 # IICCON (0x90)
LDL 0  # clear start flag
ST 144 # clear start flag
LD 144 # load IICCON
AND 10 # IICCON & 0x01 (busy)
SKZ
GOTO 12 # still busy
GOTO 20 # not busy
NOP
NOP
NOP
LDL 1 # 20
ADD 15 # counter increment
ST 15 # counter save
LD 16 # load counter mask
AND 15 # counter & mask
SKZ
GOTO 8 # still send
GOTO 32# finish send
NOP
NOP
NOP
NOP
LDL 16 # stop flag 
ST 144 # IICCON (0x90)
NOP
LDL 0  # clear stop flag
ST 144 # clear stop flag
GOTO 0 # restart
HALT
